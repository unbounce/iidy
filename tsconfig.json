{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "*/**/flycheck_*"],
  "compilerOptions": {
    "pretty": true,
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es5","es2015.promise","es2015"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "noStrictGenericChecks": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["@types", "node_modules/@types"],
    "experimentalDecorators": true
   }
}
